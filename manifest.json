{
  "manifest_version": 3,
  "name": "MeetNoteS",
  "version": "0.5.0",
  "description": "Secure local meeting recorder with summarization.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://meet.google.com/*", "https://telemost.yandex.ru/*"],
  "action": {
    "default_popup": "assistant.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["js/content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}